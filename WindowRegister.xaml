<Window x:Class="exam.WindowRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="WindowRegister" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Height="30" Width=" 400" Text="Логин" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="LoginInput"/>
        <TextBox Grid.Row="1" Height="30" Width=" 400" Text="Пароль" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="PassInput"/>
        <Button Grid.Row="2" Height="25" Width=" 200" Content="Зарегестрироваться" Click="Button_Click"/>
        <Button Grid.Row="3" Height="25" Width=" 200" Content="Войти" Click="Button_Click_1"/>
    </Grid>
</Window>

